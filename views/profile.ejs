<!-- Agrego el head que está en partials, así cuando modificamos info lo hacemos solo 1 vez-->
<%- include('./partials/head')  %>

<body>
	<!-- Header -->
    <%- include('./partials/headerlogueado') %>


<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= datosDelUsuario.foto %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center">
					<h1 class="main-title"><%= usuario.email %>
						<a href="/users/profileEdit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>

				<div>
					<ul class="">
						<li><%= products.length %></li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Mostrar solo los primeros 8 productos -->
			<% for (let i = 0; i < 8 && i < products.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= product.id %>">
							<figure class="product-box_image">
								<img src="<%= products[i].imagen %>" alt="<%= products[i].producto %>">
							</figure>
							<article class="product-box_data">
								<h2><%= products[i].producto %></h2>
								<p><%= products[i].descripcion %></p>
								<p>Comentarios: <%= products[i].comentarios.length %></p> 
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer') %>
    
</body>	
</html>