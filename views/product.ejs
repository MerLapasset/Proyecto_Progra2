<!-- Agrego el head que está en partials, así cuando modificamos info lo hacemos solo 1 vez-->
<%- include('./partials/head')  %>

<body>
    <!-- Header -->
   <% if(locals.user){%>
		<%- include('./partials/headerlogueado') %>

	<% }else{ %>
		<%- include('./partials/header') %>
	<% } %>

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"> <%=  product.producto  %></h2> 	
			
			<% if(locals.user.id == product.user.id){%>
				 <p class="product-detail-description">
				<a href="/productEdit/<%= product.id%>">Editar</a>
				</p>
				<form action="/product/<%= product.id %>" method="POST">
					<button class="logout" type="submit">
						Borrar producto <i class="fas fa-sign-in-alt"></i>
					</button>
				</form>
				 <% } %>

			
		</div>

		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/productos/<%= product.imagen%> %>" alt="<%= product.producto %>" class="product-detail-img">
					<p class="product-detail-description"> Publicado por: <%=  product.user.email %></p> 
					<p class="product-detail-description"><%= product.descripcion %></p>
				</article>

				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for( let i = 0; i < lista_comentarios.length; i++ ) { %>
							<article>
							<img src="/images/users/<%= lista_comentarios[i].user.foto %> "alt="<%= lista_comentarios[i].user.email  %>">
							<div class="data">
								<p class="user">
								<strong> <a href="/users/profile/<%=  %>"> <%= lista_comentarios[i].user.email  %></a> </strong> %> 
								</p>
								<p class="user"> <%= lista_comentarios[i].comentario  %></p>
							</div>
						</article>
						<% } %>
						
		
					</section>
					<form class="form" action="/product/<%= product.id  %>" method="GET">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %>

</body>	
</html>

