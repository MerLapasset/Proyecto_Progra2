<!-- Agrego el head que está en partials, así cuando modificamos info lo hacemos solo 1 vez-->
<%- include('./partials/head')  %>

<body>
	<!-- Header -->
	<%- include('./partials/headerlogueado') %>
	
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<form  class= "form" action="/editarPerfil" method="GET"> 


				<div class="bloqueDeForm">	
					<label for="usuario">Usuario:</label>
					<input type="text" id="usuario" name="usuario" placeholder="(tu nombre de usuario)" required>
				</div>	
				<br>
				<br>
				<div class="bloqueDeForm" >

					<label for="email">Correo electrónico:</label>
					<input type="email" id="email" name="email" placeholder="(tu mail)" required>
				
				</div>
				<br>
				<br> 

				<div>

					<label for="password">Contraseña:</label>
					<input type="password" id="password" name="password" placeholder="" required>
				
				</div>

				<br>
				<br> 
				<div class="bloqueDeForm">

					<label for="fechaNacimiento">Fecha de nacimiento:</label>
					<input type="date" id="fechaNacimiento" name="fechaNacimiento" required>
				
				</div>

				<br>
				<br>

				<div>
				<label for="nroDocumento">Número de documento:</label>
				<input type="number" id="nroDocumento" name="nroDocumento" required>
				
				</div>
				<br>
				<br>
				<div>
					<label for="fotoPerfil">Foto de Perfil: </label>
					<input type="text" id="fotoPerfil" name="fotoPerfil" placeholder="url
					" required>
					
					</div>
					<br>
					<br>

				<button type="submit">Registrarse</button>
			</form>
			
			
	<!-- footer -->
	<%- include('./partials/footer') %>
    
</body>

</html>