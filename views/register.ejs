<!-- Agrego el head que está en partials, así cuando modificamos info lo hacemos solo 1 vez-->
<%- include('./partials/head')  %>

<body>
	<!-- Header -->
    <%- include('./partials/header') %>

	<!-- Novedades -->
	<div class="col-12 text-center">
		<h2 class="products-title">Registrate</h2>
	  </div>
	  
	<div class="container registration-container">
		<form class="form registration-form" action="/users/register" method="POST", novalidate>
			<!-- Contenido del formulario -->

			<div class="form-group">
				<label for="email">Correo electrónico:</label>
				<input type="email" id="email" name="email" placeholder="(tu mail)" value="<%= locals.oldData && oldData.email ? oldData.email : null %>">
				<% if (locals.errors && errors.email) { %>
					<div class="error-msg">
						<%= errors.email.msg %>                                
					</div>                            
				<% } %>  
			</div>

			<div class="form-group">
				<label for="name">Nombre de usuario:</label>
				<input type="text" id="name" name="name" placeholder="(tu nombre)" value="<%= locals.oldData && oldData.name ? oldData.name : null %>">
				<% if (locals.errors && errors.name) { %>
					<div class="error-msg">
						<%= errors.name.msg %>                                
					</div>                            
				<% } %>  
			</div>

			<div class="form-group">
				<label for="password">Contraseña:</label>
				<input type="password" id="password" name="password" placeholder="">
				<% if (locals.errors && errors.password) { %>
					<div class="error-msg">
						<%= errors.password.msg %>                                
					</div>                            
				<% } %> 
			</div>

			<div class="form-group">
				<label for="fechaNacimiento">Fecha de nacimiento:</label>
				<input type="date" id="fechaNacimiento" name="fechaNacimiento" value="<%= locals.oldData && oldData.fechaNacimiento ? oldData.fechaNacimiento : null %>">
			</div>

			<div class="form-group">
				<label for="nroDocumento">Número de documento:</label>
				<input type="number" id="nroDocumento" name="nroDocumento" value="<%= locals.oldData && oldData.nroDocumento ? oldData.nroDocumento : null %>">
			</div>

			<div class="form-group">
				<label for="fotoPerfil">Foto de Perfil:</label>
				<input type="text" id="fotoPerfil" name="fotoPerfil" placeholder="url" value="<%= locals.oldData && oldData.fotoPerfil ? oldData.fotoPerfil : null %>">
			</div>

			<button type="submit" class="submit-button">Registrarse</button>
		</form>
	</div>


    <!-- footer -->
    <%- include('./partials/footer') %>

</body>

</html>