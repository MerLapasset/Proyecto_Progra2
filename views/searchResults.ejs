<!-- Agrego el head que está en partials, así cuando modificamos info lo hacemos solo 1 vez. Cada vez que aparezca include es la misma lógica-->
<%- include('./partials/head')  %>

<body>
    <!-- Header -->
    <%- include('./partials/header') %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Los resultados de búsqueda son: </h2>
			</div>

			<% if (!buscador) { %>
                <h2>No ingresaste ningún término de búsqueda.</h2>
            <% } else if (Product.length === 0) { %>
				<h2>No encontramos resultados para la búsqueda: <%= buscador %></h2>
			 
			<% } else{ %>

				<% for( let i = 0; i < Product.length; i++ ) { %>	
					<div class= "col-12 col-sm-6 col-lg-3" >
						<section class= "product-box" >
							<a href= "/product/<%=Product[i].id%> " >
								<figure class="product-box_image"  >
									<div class="image-container">
										<% if (Product[i].imagen != '') { %>
											<img src="/images/productos/<%= Product[i].imagen %>" alt="<%= Product[i].producto  %>" class="small-image">
										<% } else {%>
											<img src="/images/productos/default-image.png" alt="<%= Product[i].producto  %>" class="small-image">
										<% } %>
									</div>
								</figure>
								<article class="product-box_data">
									<h2><%= Product[i].producto  %></h2>
									<p><%= Product[i].descripcion  %></p>
									<p><a href="/users/profile/<%= Product[i].user.id %>"><%= Product[i].user.name %></a></p>
								</article>
							</a> 
						</section>
					</div>
				
				<% } %>
			<% } %>
			
			
			 
	


    <!-- footer -->
    <%- include('./partials/footer') %>

</body>

</html>