<!-- Agrego el head que está en partials, así cuando modificamos info lo hacemos solo 1 vez-->
<%- include('./partials/head')  %>

<body>
	<!-- Header -->
	<% if(locals.user){%>
		<%- include('./partials/headerlogueado') %>

	<% }else{ %>
		<%- include('./partials/header') %>
	<% } %>
	
	<!-- Novedades -->
	<div class="col-12">
		<h2 class="registration-title">Registrate</h2>
	</div>

	<div class="container registration-container">
		<form class="form registration-form" action="/users/profileEdit/<%= usuario.id %>" method="POST", novalidate>
			<!-- Contenido del formulario -->
			<div class="form-group">
				<label for="usuario">Usuario:</label>
				<input type="text" id="usuario" name="usuarioName" placeholder="(tu nombre de usuario)" value="<%= usuario.name  %>" ,required>
				<% if (locals.errors && errors.usuarioName) { %>
					<div class="error-msg">
						<%= errors.usuarioName.msg %>                                
					</div>                            
				<% } %>
			</div>

			<div class="form-group">
				<label for="email">Correo electrónico:</label>
				<input type="email" id="email" name="usuarioEmail" placeholder="(tu mail)" value="<%= usuario.email  %>" ,required>
				<% if (locals.errors && errors.usuarioEmail) { %>
					<div class="error-msg">
						<%= errors.usuarioEmail.msg %>                                
					</div>                            
				<% } %>
			</div>

			<div class="form-group">
				<label for="password">Contraseña:</label>
				<input type="password" id="usuarioPassword" name="password" placeholder="" required>
				<% if (locals.errors && errors.usuarioPassword) { %>
					<div class="error-msg">
						<%= errors.usuarioPassword.msg %>                                
					</div>                            
				<% } %>
			</div>

			<div class="form-group">
				<label for="fechaNacimiento">Fecha de nacimiento:</label>
				<input type="date" id="fechaNacimiento" name="usuarioFecha" value="<%= usuario.fecha  %>" ,required>
				<% if (locals.errors && errors.usuarioFecha) { %>
					<div class="error-msg">
						<%= errors.usuarioFecha.msg %>                                
					</div>                            
				<% } %>
			</div>

			<div class="form-group">
				<label for="nroDocumento">Número de documento:</label>
				<input type="number" id="nroDocumento" name="usuarioDni" value="<%= usuario.dni  %>" ,required>
				<% if (locals.errors && errors.usuarioDni) { %>
					<div class="error-msg">
						<%= errors.usuarioDni.msg %>                                
					</div>                            
				<% } %>
			</div>

			<div class="form-group">
				<label for="fotoPerfil">Foto de Perfil:</label>
				<input type="text" id="fotoPerfil" name="usuarioFoto" placeholder="url" value="<%= usuario.foto  %>" ,required>
				<% if (locals.errors && errors.usuarioFoto) { %>
					<div class="error-msg">
						<%= errors.usuarioFoto.msg %>                                
					</div>                            
				<% } %>
			</div>

			<button type="submit" class="submit-button">Registrarse</button>
		</form>
	</div>

			
			
	<!-- footer -->
	<%- include('./partials/footer') %>
    
</body>

</html>